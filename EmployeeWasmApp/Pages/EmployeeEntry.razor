@page "/employee-entry"
@using EmployeeWasmApp
@using EmployeeWasmApp.Services
@using Microsoft.AspNetCore.Components.Forms
@inject EmployeeStore Store
@inject NavigationManager Nav

<h3>Employee Details</h3>

<EditForm Model="@employee" OnValidSubmit="@Save">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Employee ID</label>
        <InputText class="form-control" @bind-Value="employee.EmployeeId" />
        <ValidationMessage For="() => employee.EmployeeId" />
    </div>

    <div class="mb-3">
        <label class="form-label">LAN ID</label>
        <InputText class="form-control" @bind-Value="employee.LanId" />
        <ValidationMessage For="() => employee.LanId" />
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">First Name</label>
            <InputText class="form-control" @bind-Value="employee.FirstName" />
            <ValidationMessage For="() => employee.FirstName" />
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Middle Initial</label>
            <InputText class="form-control" @bind-Value="employee.MiddleInitial" />
            <ValidationMessage For="() => employee.MiddleInitial" />
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Last Name</label>
            <InputText class="form-control" @bind-Value="employee.LastName" />
            <ValidationMessage For="() => employee.LastName" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="employee.EmailAddress" />
        <ValidationMessage For="() => employee.EmailAddress" />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <InputText class="form-control" @bind-Value="employee.PhoneNumber" />
        <ValidationMessage For="() => employee.PhoneNumber" />
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Location</label>
            <InputText class="form-control" @bind-Value="employee.Location" />
            <ValidationMessage For="() => employee.Location" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Cost Center Number</label>
            <InputText class="form-control" @bind-Value="employee.CostCenterNumber" />
            <ValidationMessage For="() => employee.CostCenterNumber" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Start Date</label>
            <InputDate class="form-control" @bind-Value="employee.StartDate" />
            <ValidationMessage For="() => employee.StartDate" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Separation Date</label>
            <InputDate class="form-control" @bind-Value="employee.SeparationDate" />
            <ValidationMessage For="() => employee.SeparationDate" />
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <button class="btn btn-secondary ms-2" type="button" @onclick="Reset">Clear</button>
</EditForm>

@if (!string.IsNullOrWhiteSpace(statusMessage))
{
    <div class="alert alert-success mt-3">@statusMessage</div>
}

@code {
    private YourApp.Models.EmployeeInput employee = new();
    private string? statusMessage;

    private async Task Save()
    {
         await Api.CreateAsync(employee);
         statusMessage = "Saved! Redirecting to Employee List...";
         Nav.NavigateTo("/employee-list");
    }

    private void Reset()
    {
        employee = new YourApp.Models.EmployeeInput();
        statusMessage = null;
    }
}
